extends ../layout.pug 

//- Renders individual user
block content
  div.main-container
    h2 #{user.username}
    
    ul.list 
      each item in user
        li.exclusion-item Email: #{item.username}
        li.exclusion-item Role: #{item.role}
        li.exclusion-item Is Active: #{item.active}
        li.exclusion-item Name: #{item.first_name} #{item.last_name}
        br
        button.btn(onclick=`window.location.href='/users/${item.username}/edit_user'`) Edit User
        if currentUser.loggedInUserRole === 'admin'
          button.btn(onclick=`window.location.href='/users/${item.username}/confirm_delete'`) Delete
      hr
      button.btn(onclick=`history.back()`) Back
    