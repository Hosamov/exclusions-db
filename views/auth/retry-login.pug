extends ../layout.pug 

block content
  script(src="https://www.google.com/recaptcha/api.js" async defer)
  div.main-container
    h2.content-title Retry Login
    p.red-filter Oops! Looks like those credentials didn't match a registered account. Would you like to Retry?
    form(role='form', action="/login",method="post")
      
      .form-element
        label.form-label(name='username') Email
        br
        input.form-control(type='text', name="username", placeholder='Enter Username')
        br
      .form-element
        label.form-label(name='password') Password
        br
        input.form-control(type='password', name="password", placeholder='Password')
        br
        br
      p!= recaptcha
      .form-button
        button.btn.btn-default(type='submit') Submit
        a(href='/')
          button.btn.btn-primary(type="button") Cancel