extends layout.pug

block content  
  .header 
    h1 Register Page
  .main-container
    br
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='email', name="username", placeholder='Enter Email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      .form-group
        input.form-control(type='password', name="verify_password", placeholder='Verify Password')  
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel