extends layout.pug

block content  
  .header 
    h1 Exclusions DB
  .main-container
    h2 Register
    form(role='form', action="/register",method="post")
      .form-element
        label.form-label(for='username') * Email
        br
        input.form-control(type='email', name="username", placeholder='Enter Email' size='50')
        br
      .form-element
        label.form-label(for='password') * Password
        br
        input.form-control(type='password', name="password", placeholder='Password')
        br
      .form-element
        label.form-label(for='verify_password') * Verify Password
        br 
        input.form-control(type='password', name="verify_password", placeholder='Verify Password')  
        br
      .form-element
        label.form-label(for='user_key') User Key (optional)
        br
        input.form-control(type='password', name="user_key", placeholder='Key')  
        br
        small * required
        br 
        br
      .form-button
        button.btn.btn-default(type='submit') Submit
        a(href='/')
          button.btn.btn-primary(type="button") Cancel