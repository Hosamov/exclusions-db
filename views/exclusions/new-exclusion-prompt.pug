extends ../layout.pug 
block header
  input(id="menu-toggle" type="checkbox")
  label(class='menu-button-container' for="menu-toggle")
  div.menu-button
    i.fas-icon-light-header(id="hamburger-menu" class="fa-solid fa-bars")
  ul.menu
    li.menu-item
      a(href='/home')
        i.fas-icon-light.menu-icon(class="fa-solid fa-house-user") 
          h4.menu-text Home
    if user.role === 'admin'
      li.menu-item 
        a(href='/users')
          i.fas-icon-light.menu-icon(class="fa-solid fa-users") 
            h4.menu-text Users
    li.menu-item 
      a(href=`/users/${user.username}`)
        i.fas-icon-light.menu-icon(class="fa-solid fa-gear") 
          h4.menu-text Account
    li.menu-item
      form(id='logout' action="/logout" method="post")
        i.fas-icon-light-menu.menu-icon-logout(id="logout-icon" class="fa-solid fa-right-from-bracket")
          btn(type="submit") 
          h4.menu-text Logout

block content 
    div.main-container
        br
        form(role='form' action='/add_exclusion' method='get')
            .form-eclusoin-section
                .form-element  
                    label.form-label.tooltip(for='exclusions_names') Select Past Exclusion 
                    select(name='exclusions_names' id='exclusions_names') 
                        each exclusion in exclusions
                           option(value={exclusion.exp_date !== 'Lifetime' ? 'Test': ''}) 

                